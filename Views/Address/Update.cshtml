@{
    ViewData["Title"] = "Address";
}
@model PersonManagement.Models.Address;


<h1>Update Address</h1>

@if (Model is null)
{
    <p>No data found</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Street</label>
            <input type="text" class="form-control" asp-for="Street" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">ZIP</label>
            <input type="text" class="form-control" asp-for="ZIP" />
            <span asp-validation-for="ZIP" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Country</label>
            <select class="form-select" asp-items="@ViewBag.CountryList" asp-for="CountryId">
                <option></option>
            </select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label class="form-label">Person</label>
            <input type="text" class="form-control" value="@ViewBag.PersonName" readonly />
            <select class="form-select" asp-items="@ViewBag.PersonList" asp-for="PersonId" hidden >
                <option></option>
            </select>
            <span asp-validation-for="PersonId" class="text-danger"></span>
        </div>

        <div class="mt-5">
            <a class="btn btn-primary" asp-controller="Address" asp-action="List">Back</a>
            <a class="btn btn-primary" asp-controller="Address" asp-action="Update">Reload</a>
            <button type="submit" class="btn btn-primary">Store</button>
            <button type="submit" class="btn btn-primary" asp-controller="Address" asp-action="Delete">Delete</button>
        </div>

    </form>
}
