@{
    ViewData["Title"] = "Address";
}
@model PersonManagement.Models.Address;


<h1>Update Address</h1>

@if (Model is null)
{
    <p>No data found</p>    
}
else {
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Street</label>
            <input type="text" class="form-control" asp-for="Street" />
        </div>

        <div class="mt-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="City" />
        </div>

        <div class="mt-3">
            <label class="form-label">ZIP</label>
            <input type="text" class="form-control" asp-for="ZIP" />
        </div>

        <div class="mt-3">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" asp-for="CountryId" />
        </div>

        <div class="mt-3">
            <label class="form-label">Person</label>
            <input type="text" class="form-control" asp-for="PersonId" />
        </div>

        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Address" asp-action="List">Cancel</a>
            <button type="submit" class="btn btn-primary">Store</button>
            <button type="submit" class="btn btn-primary" asp-controller="Address" asp-action="Delete">Delete</button>
        </div>

    </form>
}