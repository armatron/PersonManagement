@{
    ViewData["Title"] = "Person";
}
@model List<PersonManagement.Models.Person>;

<h1>List of Persons</h1>

<a class="btn btn-primary" asp-controller="Person" asp-action="Create">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Identity Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
             <tr>
                 <td>@person.Id</td>
                 <td>@person.IdentityNumber</td>
                 <td>@person.FirstName</td>
                 <td>@person.LastName</td>
                 <td>@person.Email</td>
                 <td>@person.Phone</td>
                 <td>
                     <a class="btn btn-primary" asp-controller="Person" asp-action="Update" asp-route-id="@person.Id">Edit</a>
                 </td>
             </tr>
        }
    </tbody>
</table>
