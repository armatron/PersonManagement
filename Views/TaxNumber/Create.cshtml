@{
    ViewData["Title"] = "TaxNumber";
}
@model PersonManagement.Models.TaxNumber;

<h1>Create Tax Number</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">TaxNumber</label>
        <input type="text" class="form-control" asp-for="Number" />
    </div>

    <div class="mt-3">
        <label class="form-label">Country</label>
        <select class="form-select" asp-items="@ViewBag.CountryList" asp-for="CountryId">
            <option disabled selected></option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Person</label>
        <select class="form-select" asp-items="@ViewBag.PersonList" asp-for="PersonId">
            <option disabled selected></option>
        </select>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-controller="TaxNumber" asp-action="List">Cancel</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

</form>