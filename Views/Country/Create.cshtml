@{
    ViewData["Title"] = "Country";
}
@model PersonManagement.Models.Country;


<h1>Create Country</h1>

<form method="get">
    Find by:
    @Html.TextBox("Name", (String)ViewBag.FilterParamNumber, new { placeholder = "Street", @class = "form-control filter-control" })
    <button type="submit" class="btn btn-primary">Find</button>
    <a class="btn btn-primary" asp-controller="Country" asp-action="List">Clear</a>
    @* <input type="reset" class="btn btn-primary" value="Clear" /> issue with dropdown*@
</form>
<br />
<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-controller="Country" asp-action="List">Cancel</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>

</form>
