@{
    ViewData["Title"] = "Country";
}
@model PersonManagement.Models.Country;


<h1>Update Country</h1>

@if (Model is null)
{
    <p>No data found</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-5">
            <a class="btn btn-primary" asp-controller="Country" asp-action="List">Back</a>
            <a class="btn btn-primary" asp-controller="Country" asp-action="Update">Reload</a>
            <button type="submit" class="btn btn-primary">Store</button>
            <button type="submit" class="btn btn-primary" asp-controller="Country" asp-action="Delete">Delete</button>
        </div>

    </form>
}
